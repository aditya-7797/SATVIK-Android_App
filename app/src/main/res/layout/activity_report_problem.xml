<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About_us">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/problem_1"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:padding="@dimen/pading"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textStyle="bold"
        android:text="@string/report_a_problem" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wellcome_satvik"
        android:layout_below="@id/problem_1"
        android:padding="@dimen/pading"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:text="@string/problem_statement" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/wellcome_satvik"
        android:padding="@dimen/pading">

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact us at satvik0246@gmail.com"
            android:autoLink="email"
            android:clickable="true"
            android:linksClickable="true"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_centerInParent="true" />
    </ScrollView>

</RelativeLayout>
