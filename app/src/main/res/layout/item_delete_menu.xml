<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/delete_menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="0dp">

            <View
                android:id="@+id/delete_rectangle_14"
                android:layout_width="wrap_content"
                android:layout_height="87.15dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rectangle_14_shape" />

            <ImageView
                android:id="@+id/delete_food_item_img"
                android:layout_width="89.18dp"
                android:layout_height="68.91dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:contentDescription="delete_chapati_1"
                android:src="@drawable/chapati_1" />

            <TextView
                android:id="@+id/delete_food_item_name"
                android:layout_width="142.1dp"
                android:layout_height="25.68dp"
                android:layout_marginLeft="109dp"
                android:layout_marginTop="12dp"
                android:text="Chapati"
                android:textColor="@color/_bg__madhavi_bhide_profile_ek1_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/delete_food_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="111dp"
                android:layout_marginTop="38dp"
                android:text="Rs. 10/piece"
                android:textColor="@color/_bg__madhavi_bhide_profile_ek1_color"
                android:textSize="14sp" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="275dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/red"
                android:text="Delete" />
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
